<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HSAT.Experiments.DemoDrawing.DemoDrawing"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:demoDrawing="clr-namespace:HSAT.Experiments.DemoDrawing"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
    Title="DemoDrawing">
    <ScrollView>
        <VerticalStackLayout>
            <Button Clicked="Button_Clicked" Text="Open file" />
            <skia:SKCanvasView
                x:Name="skCanvas"
                HeightRequest="2300"
                PaintSurface="SKCanvasView_PaintSurface"
                WidthRequest="800" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>