<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:demoDrawing="clr-namespace:HSAT.Experiments.DemoDrawing"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="HSAT.Experiments.DemoDrawing.DemoDrawing"
             Title="DemoDrawing">
    <ContentPage.Resources>
        <demoDrawing:DrawingSurface x:Key="drawable"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <GraphicsView x:Name="graphicsView"
                      Drawable="{StaticResource drawable}"
                      HeightRequest="250"
                      WidthRequest="500"
                      BackgroundColor="Aqua">
            <GraphicsView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Image_Tapped"/>
            </GraphicsView.GestureRecognizers>
        </GraphicsView>
        <skia:SKCanvasView x:Name="skCanvas" 
                           PaintSurface="SKCanvasView_PaintSurface"
                           HeightRequest="250"
                           WidthRequest="500"
                           BackgroundColor="Aqua"/>
        <Button Clicked="Button_Clicked"
                Text="Open file"/>
    </VerticalStackLayout>
</ContentPage>