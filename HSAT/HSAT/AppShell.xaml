    </Shell.ToolbarItems>-->
    <Shell.ItemTemplate>
        <DataTemplate x:DataType="FlyoutItem">
            <Grid ColumnDefinitions="40,*" MinimumHeightRequest="40">
                <Image
                    Margin="5"
                    HeightRequest="40"
                    Source="{Binding FlyoutIcon}" />
                <Label
                    Grid.Column="1"
                    Text="{Binding Title}"
                    VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    <Shell.MenuItemTemplate>
        <DataTemplate x:DataType="MenuItem">
            <Grid ColumnDefinitions="30,*" MinimumHeightRequest="30">
                <Image
                    Margin="5"
                    HeightRequest="30"
                    Source="{Binding IconImageSource}" />
                <Label
                    Grid.Column="1"
                    Text="{Binding Text}"
                    VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.MenuItemTemplate>

    <MenuItem Clicked="CreateProject" Text="Создать" />
    <MenuItem Clicked="OpenProject" Text="Открыть" />

    <ShellContent
        Title="Главная"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Демо - рисование"
        ContentTemplate="{DataTemplate demoDrawing:DemoDrawing}"
        Route="DemoDrawing" />
</Shell>
