    <Shell.ItemTemplate>
        <DataTemplate x:DataType="FlyoutItem">
            <Grid ColumnDefinitions="50,*" MinimumHeightRequest="50">
                <Image Source="{Binding FlyoutIcon}"
                       Margin="5"
                       HeightRequest="50"/>
                <Label Grid.Column="1"
                       Text="{Binding Title}"
                       VerticalTextAlignment="Center"/>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    <ShellContent
