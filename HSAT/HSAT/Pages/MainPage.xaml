<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSAT.Pages.MainPage">
    <ScrollView>
        <VerticalStackLayout
                    AbsoluteLayout.LayoutBounds="50,50,200,200"
                    Spacing="25"
                    Padding="30,0"
                    VerticalOptions="Center">

            <Label
                x:Name="lblLabel"
                Text="HyperSpectral imaging Analysis Tool"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
